<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".unit">
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="24dp"
        android:textSize="20sp"
        android:id="@+id/length_l"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:numeric="decimal"
        android:hint="待转长度"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="24dp"
        android:textSize="20sp"
        android:id="@+id/length_r"
        android:layout_below="@+id/length_l"
        android:layout_alignParentLeft="true"
        android:hint="转换结果"
        />
    <Spinner
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/Spinner_length_l"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/length_l"
        android:entries="@array/arr_length"
        />
    <Spinner
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/Spinner_length_r"
        android:layout_below="@id/Spinner_length_l"
        android:layout_toRightOf="@id/length_r"
        android:entries="@array/arr_length"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/length_button"
        android:layout_toRightOf="@id/Spinner_length_l"
        android:layout_alignParentTop="true"
        android:text="转换"
        />



    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="24dp"
        android:textSize="20sp"
        android:id="@+id/volume_l"
        android:layout_below="@id/length_r"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:numeric="decimal"
        android:hint="待转体积"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="24dp"
        android:textSize="20sp"
        android:id="@+id/volume_r"
        android:layout_below="@+id/volume_l"
        android:layout_alignParentLeft="true"
        android:hint="转换结果"
        />
    <Spinner
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/Spinner_volume_l"
        android:layout_below="@id/Spinner_length_r"
        android:layout_toRightOf="@id/volume_l"
        android:entries="@array/arr_volume"

        />
    <Spinner
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/Spinner_volume_r"
        android:layout_below="@id/Spinner_volume_l"
        android:layout_toRightOf="@id/volume_r"
        android:entries="@array/arr_volume"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/empty"
        android:layout_below="@id/length_button"
        android:layout_toRightOf="@id/length_r"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volume_button"
        android:layout_toRightOf="@id/Spinner_length_l"
        android:layout_below="@id/empty"
        android:text="转换"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="24dp"
        android:textSize="20sp"
        android:id="@+id/Metric_conversion_l"
        android:layout_below="@id/volume_r"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:numeric="decimal"
        android:hint="待转进制"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="24dp"
        android:textSize="20sp"
        android:id="@+id/Metric_conversion_r"
        android:layout_below="@+id/Metric_conversion_l"
        android:layout_alignParentLeft="true"
        android:hint="转换结果"
        />
    <Spinner
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/Spinner_Metric_conversion_l"
        android:layout_below="@id/Spinner_volume_r"
        android:layout_toRightOf="@id/Metric_conversion_l"
        android:entries="@array/arr_Metric_conversion"
        />
    <Spinner
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/Spinner_Metric_conversion_r"
        android:layout_below="@id/Spinner_Metric_conversion_l"
        android:layout_toRightOf="@id/Metric_conversion_r"
        android:entries="@array/arr_Metric_conversion"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Metric_conversion_button"
        android:layout_toRightOf="@id/Spinner_Metric_conversion_l"
        android:layout_below="@id/empty2"
        android:text="转换"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/empty2"
        android:layout_below="@id/volume_button"
        android:layout_toRightOf="@id/Spinner_Metric_conversion_r"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="back"/>
</RelativeLayout>